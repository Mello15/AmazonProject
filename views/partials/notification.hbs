<div class="notification">
  {{#if successMessage}}
    <div class="alert alert-success alert-dismissible fade show">
        {{successMessage}}
      <button
        type="button"
        class="btn-close"
        data-bs-dismiss="alert"
    
      ></button>
    </div>
  {{/if}}
  {{#if errorMessage}}
      <div class="alert alert-danger alert-dismissible fade show">
        {{errorMessage}}
      <button
        type="button"
        class="btn-close"
        data-bs-dismiss="alert"
    
      ></button>
    </div>
    {{/if}}
</div>