<section class="row">
  <div class="col-md-10 mx-auto">
    {{#each products}}
      <div class="card card-body my-2 shadow">
        <div
          class="d-flex align-items-center align-items-lg-start text-lg-left flex-lf-row justify-content-between"
        >
          <div class="d-flex align-items-center">
            <a href="/products/{{_id}}">
              <img
                src="/images/{{image}}"
                alt="{{title}}"
                width="160"
                height="160"
                style="object-fit: contain;"
              />
            </a>
            <h6 class="fw-bold"> <a href="/products/{{_id}}">{{title}}</a></h6>
          </div>

         
          <div class="d-flex align-items-center my-auto">
            <h3 class="me-5"> ${{price}}</h3>
            <form action="/cart/add" method="POST">
            <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-warning text-light" style="min-width: max-content;"> Add to Cart</button>
            </form>
          </div>
        </div>
      </div>
      
    {{else}}
      <h5 class="text-center"> No Products, Add one !</h5>
    {{/each}}
  </div>
</section>