<section class="row">
    {{#each products}}
    <div class="col-md-6 col-sm-12 col-lg-3 mt-2 d-flex text-center">
        <div class="card w-100 shadow">
            <div class="card-body d-flex flex-column justify-content-md-between text-center">
                <a href="/products/{{_id}}">
                    <img src="/images/{{image}}" alt="{{title}}" class="card-img img-fluid"
                    style="height: 150px; width:150px; object-fit:contain;"
                    >
                </a>
                <h6 class="fw-bold mt-3"> 
                    <a href="/products/{{_id}}">{{title}}</a>
                </h6>

                <h3>${{price}}</h3>
                <div class="mt-3 d-flex justify-content-between flex-shrink-2">
                    <a href="/admin/edit-product/{{_id}}?edit=true" class="btn btn-warning text-light"> EDIT</a>
                    <form action="/admin/delete-product" method="POST">
                        <button type="submit" class="btn btn-danger text-light">DELETE</button>
                        <input type="hidden" name="id" value="{{_id}}">
                    </form>
                </div>
            </div>
        </div>
    </div>
    {{else}}
    <p class="text-center">No products</p>
    {{/each}}
</section>